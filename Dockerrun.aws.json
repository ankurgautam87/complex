{

"AWSEBDockerrunVersion": 2,
"containerdefinitions": [
	{
		"name": "client",
		"image": "ankurkumargautam/multi-client",
		"hostname": "client",
		"essential": false
	},
	{
		"name": "server",
		"image": "ankurkumargautam/multi-server",
		"hostname": "api",
		"essential": false
	},
	{
		"name": "worker",
		"image": "ankurkumargautam/multi-worker",
		"essential": false
	},
	{
		"name": "nginx",
		"image": "ankurkumargautam/multi-nginx",
		"essential": true,
		"portMappings": [
			"hostPort": "80",
			"containerPort": "80"
		],
		"links": ["client","server"]
	}
]
}